<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/_10sdp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/itemback"
        android:orientation="vertical"
        android:padding="@dimen/_10sdp">

        <TextView
            android:id="@+id/poemName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:fontFamily="@font/spi"
            android:maxLines="1"
            android:text="Oshiq derlar meni"
            android:textColor="@color/black"
            android:textSize="@dimen/_16ssp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/poemText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:fontFamily="@font/spi"
            android:textColor="#6A6A6A"
            android:maxLines="3"
            android:text="Sizni birinchi bor ko’rganimdayoq menga yoqib
qolgansiz, lekin bu tuyg’u sevgiga aylanadi deb
o’ylamagandim . . . "
            android:textSize="@dimen/_14ssp" />
    </LinearLayout>
</LinearLayout>